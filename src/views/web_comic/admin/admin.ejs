<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>
    <%- include('manager') %>
        <div class="container">
            <% if (url==="author") { %>
                <%- include('author') %>
            <% } else if (url==="user") { %>
                <%- include('user') %>
            <% } else if (url==="comic") { %>
                <%- include('comic') %>   
           <% } else if (url==="category") { %>
                <%- include('category') %>
            <% } else if (url===undefined) { %>
                <%- include('comic_image') %>
            <% } else { %>
                <div class="row">
                    <a class="col-6 d-flex  bg-warning" href="/admin/author">
                        <div class="w-100" style="height: 300px;">
                            <h3>Author</h3>
                        </div>
                    </a>
                    <a class="col-6 d-flex  bg-danger" href="/admin/category">
                        <div class="w-100" style="height: 300px;">
                            <h3>Category</h3>
                        </div>
                    </a>
                    <a class="col-6 d-flex  bg-dark" href="/admin/comic">
                        <div class="w-100" style="height: 300px;">
                            <h3>Comic</h3>
                        </div>
                    </a>
                    <a class="col-6 d-flex  bg-success" href="/admin/user">
                        <div class="w-100" style="height: 300px;">
                            <h3>User</h3>
                        </div>
                    </a>
                </div>
            <% } %>
                
        </div>
    <%- include('../part/footer.ejs') %>
</body>

</html>